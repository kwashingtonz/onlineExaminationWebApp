package com.onlineExamApp.app.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.web.PageableDefault;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

import com.onlineExamApp.app.model.Book;
import com.onlineExamApp.app.model.Category;
import com.onlineExamApp.app.model.Search;
import com.onlineExamApp.app.service.BookService;
import com.onlineExamApp.app.service.CategoryService;
import com.onlineExamApp.app.util.PaginatorHelper;

@Controller
@RequestMapping("/book")
public class BookController {
	
	@Autowired
	private BookService service;
	@Autowired
	private CategoryService categoryService;

	@RequestMapping(value= "", method = { RequestMethod.GET, RequestMethod.POST })
	public String list(@ModelAttribute(value = "search") Search search,Model model, 
			@PageableDefault(value = PaginatorHelper.DEFAULT_PAGINATION_SIZE, page = 0) Pageable pageable) {
		List<Book> books = service.listSearched(search);
		Page<Book> page=PaginatorHelper.pagiableList(books, pageable);
		model.addAttribute("books", books);
		model.addAttribute("page", page);
		return "book/list";
	}
	
	@RequestMapping("/add")
	public String add(Model model) {
		Book book = new Book();
		List<Category> categories = categoryService.listAll();
		
	    model.addAttribute("book", book);
	    model.addAttribute("categories", categories);
		return "book/add";
	}
	
	@RequestMapping(value = "/save", method = RequestMethod.POST)
	public String save(@ModelAttribute("book") Book book) {
	    service.save(book);
	     
	    return "redirect:/book";
	}
	
	@RequestMapping("/edit/{id}")
	public String showEditProductPage(Model model,@PathVariable(name = "id") int id) {
	    Book book = service.get(id);
	    List<Category> categories = categoryService.listAll();
	    
	    model.addAttribute("book", book);
	    model.addAttribute("categories", categories);
	    
	    return "book/add";
	}
	
	@RequestMapping(value="/delete/{id}")
	public String delete(Model model,@PathVariable(name = "id") int id) {
	    service.delete(id);
	    
	    return "redirect:/book";
	}
	
	@GetMapping("/403")
	public String error403() {
		return "403";
	}
}
