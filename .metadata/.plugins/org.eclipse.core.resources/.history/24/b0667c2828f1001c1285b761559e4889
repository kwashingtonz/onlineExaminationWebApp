package com.onlineExamApp.app.repository;
import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.eadcw3.libraryapp.model.Book;
import com.eadcw3.libraryapp.model.Search;

public interface BookRepository extends JpaRepository<Book, Integer>{

	@Query("SELECT i FROM Book i WHERE i.name LIKE %:name% order by i.id desc")
	List<Book> listSearched(@Param("name") String name);

}
